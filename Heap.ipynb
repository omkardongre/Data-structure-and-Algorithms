        if self.data:
            return self.data[0]
        
    def insert(self,value):
        self.data.append(value)
        self.size+=1
        
        pindex=(self.size-2)//2
        index=self.size-1
        while index>=1 and self.data[pindex]>value:
            self.data[index]=self.data[pindex]
            index=pindex
            pindex=(pindex-1)//2
            
        self.data[index]=value
        
        print(self.data)
        
    def delete(self):
        if not self.size:
            return
        
        value=self.data.pop()
        self.size-=1
        curr=0
        lp=1
        rp=2
        while rp<=self.size-1:
            if self.data[lp]>self.data[rp]:
                self.data[curr]=self.data[rp]
                curr=rp
            else:
                self.data[curr]=self.data[lp]
                curr=lp
        
            lp=curr*2+1
            rp=curr*2+2
      
        if self.data:
            self.data[curr]=value
        
        if lp<= self.size-1 and self.data[lp]<value:
            self.data[curr]=self.data[lp]
            self.data[lp]=value
        
        print(self.data)


